<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.Upload_AssignmentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/list_design"
        android:backgroundTint="@color/white"
        android:elevation="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/corners"
            android:text="CREATE NEW ASSIGNMENT"
            android:textColor="@color/blue"
            android:textSize="22dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sub_box_upload_ass"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_height="wrap_content"
            app:hintTextColor="@color/blue"
            android:hint="Enter Subject">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/stu_user_id"
                android:paddingStart="10dp"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/assno_box_upload_ass"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_height="wrap_content"
            app:hintTextColor="@color/blue"
            android:hint="Enter Assignment No. ">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/new_ass_no"
                android:paddingStart="10dp"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/assby_upload_ass"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_height="wrap_content"
            app:hintTextColor="@color/blue"
            android:hint="Assignment By ">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/assby"
                android:paddingStart="10dp"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/uploadasspdf"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginVertical="20dp"
            android:src="@drawable/pdf" />

        <TextView
            android:id="@+id/filename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColorHint="@color/blue"
            android:textColor="@color/blue"
            android:layout_margin="10dp"
            android:padding="10dp"/>




        <Button
        android:id="@+id/ass_up"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@drawable/list_design"
        android:textSize="16dp"
        android:layout_marginTop="15dp"/>

    </LinearLayout>

</LinearLayout>